<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PreferenceCheckBox">
        <attr name="preference_key" format="string" />
        <attr name="preference_key_default_value" format="boolean" />
        <attr name="store_inverted" format="boolean" />
    </declare-styleable>

    <attr name="preferenceCheckBoxStyle" format="reference" />

    <style name="PreferenceCheckBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>